<h2>Вход</h2>

<%# форма входа на сайт (логин) %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="col-md-6 buffer-top">
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "Пароль" %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit 'Войти', class: 'btn btn-primary' %>
      <%= link_to 'Назад', root_path, class: 'btn btn-default' %>
      <div class="buffer-top"><%= link_to 'Забыли пароль?', new_password_path(resource_name) %></div>
    </div>
  </div>
<% end %>
