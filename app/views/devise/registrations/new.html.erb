<h2>Регистрация</h2>

<%# форма регистрации %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="col-md-6 buffer-top">
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :birthday %><br />
      <%= f.date_select :birthday, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "Пароль" %>
      <% if @minimum_password_length %>
        <em>(минимально <%= @minimum_password_length %> символов)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "Подтверждение пароля" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit 'Зарегистрироваться', class: 'btn btn-primary' %>
      или
      <%= link_to I18n.t('views.devise.registrations.forgot_password'), new_password_path(resource_name) %><br />
    </div>
  </div>
<% end %>