<h2>Регистрация</h2>

<%# форма регистрации %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="col-md-6 buffer-top">
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :birthday %><br />
      <%= f.date_select :birthday,
                        {order: [:day, :month, :year],
                         prompt: { day: 'День', month: 'Месяц', year: 'Год' },
                         start_year: Date.today.year - 5, end_year: Date.today.year - 100} %>
    </div>

    <div class="form-group">
      <%= f.label :ava %>
      <p><%#= image_tag(@user.ava.thumb.url) if @user.ava? %></p>
      <%= f.file_field :ava %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "Пароль" %>
      <% if @minimum_password_length %>
        <em>(минимально <%= @minimum_password_length %> символов)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "Подтверждение пароля" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit 'Регистрация', class: 'btn btn-primary' %>
      <%= link_to 'Назад', root_path, class: 'btn btn-default' %>
      <div class="buffer-top"><%= link_to 'Забыли пароль?', new_password_path(resource_name) %></div>
    </div>


  </div>
<% end %>