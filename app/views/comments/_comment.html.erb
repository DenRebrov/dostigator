<%# паршал комментариев %>
<div class="comment-border">
  <div class="text-bold">
    <p><%= comment.body %></p>
  </div>

  <p>
    <span>
      <%= render partial: 'users/user', object: comment.user %>
    </span>
    <em><%= l comment.created_at, format: :long %></em>

    <%# удалять свой комментарий может только автор этого комментария %>
    <% if current_user_can_edit?(comment) %>
      <%= link_to "Удалить",
                  target_comment_path(comment.target, comment),
                  method: :delete,
                  data: {confirm: t('.destroy_confirm')},
                  class: "label label-danger" %>
    <% end %>
  </p>
</div>