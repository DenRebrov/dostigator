<%# Паршиал для отображения инфы об отдельной цели %>
<div class="col-md-12">
  <div class="thumbnail">

    <%#= content_tag 'div', '', class: 'event-background', style: "background-image: url(#{asset_path('event_thumb.jpg')})" %>

    <div class="thumbnail-inner event-info-inner">
      <div class="caption">
        <div class="event-description">
          <h3><%#= link_to user.name, target_path(target) %></h3>
          <h3><%= link_to target.title, target_path(target) %></h3>
          <h3><small><%= l target.date, format: :long %></small></h3>
        </div>
      </div>
    </div>
  </div>
</div>