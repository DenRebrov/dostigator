<div class="col-md-12">
  <div class="row">
    <div class="nested-fields">
      <div class="panel panel-default">
        <div class="panel-heading">
          <span class="glyphicon glyphicon-road"></span>
          <%= f.label :name %>
        </div>

        <div class="panel-body">
          <div class="form-group field">
            <%= f.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group field">
            <%#= f.label :status %>
            <%#= f.select(:status, options_for_select([['Не выполнен', 0], ['Выполнен', 1]]), class: 'form-control') %>
          </div>

          <div class="form-group">
            <%= f.radio_button :status, 0 %>
            <%= label :status_incomplete, 'Шаг не выполнен...' %><br />
            <%= f.radio_button :status, 1 %>
            <%= label :status_complete, 'Шаг выполнен!' %>
          </div>

          <h4><%= link_to_remove_association "Удалить шаг", f, class: "label label-danger" %></h4>
        </div>
      </div>
    </div>
  </div>
</div>
