<div class="text-center">
  <h1>Цели наших пользователей</h1>
</div>

<%#= @user.name %>
<div class="text-white border-frame">
  <%# @targets.each do |target| %>
    <h1><%#= target.title %></h1>
    <h3><%#= target.date %></h3>
    <%#= target.description %>
  <%# end %>
</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Пользователь</th>
    <th>Цель</th>
    <th>Дата</th>
    <th>Результат</th>
  </tr>
  </thead>

  <tbody>
  <tr>
    <% @targets.each do |target| %>
      <td><%= @user.name %></td>
      <td><%= target.title %></td>
      <td><%= target.date %></td>
      <td><span class="label label-success">Успех</span></td>
    <% end %>
  </tr>
  </tbody>
</table>
