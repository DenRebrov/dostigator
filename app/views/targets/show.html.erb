<div class="col-md-12 container">
  <%= content_tag :div, class: (@target.status == 1 ? "panel panel-success" : "panel panel-primary") do %>
    <div class="panel-heading">
      <div class="text-white text-subtitle">
        <%= link_to image_tag(user_avatar(@user), class: 'img-icon'), user_path(@user) %>
        <%= @target.title %>
      </div>
    </div>

    <div class="panel-body">
      <div class="row">
        <div class="col-md-9">
          <% @target.steps.each do |step| %>
            <div class="text-L buffer-bottom-mini">
              <%= content_tag :div, class: (step.status == 1 ? "label label-success" : "label label-info") do %>
                <%= content_tag :span, class: (step.status == 1 ? "glyphicon glyphicon-check" : "glyphicon glyphicon-unchecked") do %><% end %>
                <%= step.name %>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="col-md-3">
          <div class="text-L buffer-bottom-mini pull-right">
            <div class="label label-default">
              <%= l @target.date, format: :long %>
            </div>
          </div>

          <% if current_user_can_edit?(@target) %>
            <div class="buffer-top pull-right">
              <%= link_to "Изменить", edit_target_path, class: 'btn btn-primary' %>
              <%= link_to "Удалить", target_path(@target),
                          :method => :delete,
                          data: {confirm: 'Точно удалить эту цель?'},
                          class: 'btn btn-danger' %>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  <% end %>
</div>

<div class="container">
  <div class="col-md-5 comment-form-border">
    <%= render partial: 'comments/form', locals: { commentable: @target } %>
  </div>

  <div class="col-md-7">
    <%= render partial: 'comments/comments', locals: { commentable: @target } %>
  </div>
</div>