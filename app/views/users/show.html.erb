<%# Представление на странице пользователя %>
<div class="container">
  <div class="col-md-6">
    <%= image_tag user_avatar(@user) %>
  </div>

  <div class="col-md-6">
    <h1><%= @user.name %></h1>
    <%= link_to "Редактипровать профиль", edit_user_path, class: 'btn btn-default' if @user == current_user %>
    <%= link_to "Моя цель", new_target_path, class: 'btn btn-success button-round' if @user == current_user %>
  </div>
</div>



<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="text-center"><h1>Я хочу</h1></div>

      <% @targets.each do |target| %>
        <%= render partial: 'targets/target', object: target %>
      <% end %>

      <%# Рендерим сразу массив целей, каждый в паршиале 'targets/target' %>
      <%#= render partial: 'targets/target', collection: @targets %>
    </div>

    <div class="col-md-6">
      <div class="text-center"><h1>Я достиг</h1></div>

      <% @targets.each do |target| %>
        <%= render partial: 'targets/target', object: target %> <%# if target.completed == true %>
      <% end %>
      <%# Рендерим сразу массив целей, каждый в паршиале 'targets/target' %>
      <%#= render partial: 'targets/target', collection: @targets %>
    </div>
  </div>
</div>